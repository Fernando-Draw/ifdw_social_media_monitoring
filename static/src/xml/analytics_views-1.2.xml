<?xml version="1.0" encoding="UTF-8"?>
<!-- Vistas de gráficos personalizada con JS para lote de tareas según filtrado de fecha y registros -->
<templates xml:space="preserve">
    <t t-name="AnalyticsGraphSmmonitorTemplate" owl="1">
        <div class="o_analytics_graph">
            <h3>Análisis gráfico avanzado de RR.SS.</h3>
            <div>
                <!-- Filtro de temporalidad -->
                <label>Filtro por fechas de registros: </label>
                <input type="date" id="start_date" placeholder="Fecha de inicio"/>
                <input type="date" id="end_date" placeholder="Fecha de fin"/>
                <button onclick="applyDateFilter()">Aplicar Filtro</button>
            </div>
            <!-- Contenedores de los dos tipos de gráficos -->
            <div>
                <canvas id="barChart"></canvas>
                <canvas id="lineChart"></canvas>
            </div>
        </div>
    </t>
</templates>
